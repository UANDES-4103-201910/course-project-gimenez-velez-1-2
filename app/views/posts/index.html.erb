<html lang="en">
<h1>Posts</h1>
<div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
<div class="input-group">
<div class="input-group-prepend">
</div>
<input type="text" class="form-control" placeholder="Search" aria-label="Input group example" aria-describedby="btnGroupAddon">
</div>
<div class="btn-group mr-2" role="group" aria-label="First group">
<button type="button" class="btn btn-secondary">Go</button>
</div>
  <br>
    <table class="table table-dark">
      <thead>
          <tr class="posts header">
          <th scope="col">Title</th>
          <th scope="col">Text</th>
          <th scope="col">User ID</th>
          <th scope="col">Share counter</th>
          <th scope="col">File attachment</th>
          <th scope="col">See!</th>
          <th scope="col">Edit!</th>
          <th scope="col">Delete!</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.text %></td>
            <td><%= post.title %></td>
            <td><%= post.user_id%></td>
            <td><%= post.share_counter %></td>
            <td><%= post.file_attachment %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="link newpost"><%= link_to 'Create NEW POST!!!', new_post_path %></div>
</div>
</div>
</html>
