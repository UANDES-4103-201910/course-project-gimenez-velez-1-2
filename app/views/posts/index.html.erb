<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Title</th>
      <th>User</th>
      <th>Geofence</th>
      <th>Apropriated</th>
      <th>Is open</th>
      <th>Is solved</th>
      <th>Share counter</th>
      <th>Report counter</th>
      <th>Is hidden</th>
      <th>Is linked</th>
      <th>File attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.title %></td>
        <td><%= post.user_id %></td>
        <td><%= post.geofence_id %></td>
        <td><%= post.apropriated %></td>
        <td><%= post.is_open %></td>
        <td><%= post.is_solved %></td>
        <td><%= post.share_counter %></td>
        <td><%= post.report_counter %></td>
        <td><%= post.is_hidden %></td>
        <td><%= post.is_linked %></td>
        <td><%= post.file_attachment %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
