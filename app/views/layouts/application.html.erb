<!DOCTYPE html>
<html>
  <head>
    <title>Groucher Official Page</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/posts" style="font-size:20px">
    <image class="small-logo" style="border-radius:100px"> Groucher
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link" href="/posts">Home<span class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link" href="/posts">Wall<span class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link" href="/users">Users<span class="sr-only">(current)</span></a>
        </li>

        <li class="nav-item dropdown">
            <%=link_to "Profile", user_path(current_user), class: 'nav-link' %>
        </li>

        <% form_tag users_path, :method => 'get' do %>
        <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
        <% end %>

        <form class="form-inline my-2 my-lg-0" style="float:left">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" style="margin-left:70px">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
        </form>
      </ul>
        <a class="text-muted"> Welcome <%= current_user.name %> <%= current_user.lastname %> &nbsp --> &nbsp </a>
          <%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class:'logoutLink' %>
      <% end %>
    </div>
  </nav>
  <body style="  background:linear-gradient(110deg, #11a316 60%, #0b8c0f 60%);">
    <div class="container">
    <div class="subcontainer">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <%= yield %>
  </body>
</html>
